<div class="menu-container">
    <div class="inner-container">
        <div class="new-logo-container">
            <a href="/">
                <img class="logo" src="/assets/common/logo.png"/>
            </a>
        </div>

        <div class="menu-item-container">
            <a class="menu-item" href="/">About</a><span>&mdash;</span>
            <a class="menu-item" href="/shirt_measurements">Get Started</a><span>&mdash;</span>
            <a class="menu-item menu-item-selected" href="/dashboard/login">Log In</a>
        </div>
